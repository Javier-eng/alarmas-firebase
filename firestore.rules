rules_version = '2';

// Reglas para my-days-test. Pega este contenido en Firebase Console:
// Firestore Database → Reglas → pegar y publicar.

service cloud.firestore {
  match /databases/{database}/documents {

    // Usuarios: cada usuario solo puede leer y escribir su propio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Alarmas personales (sin grupo): users/{userId}/alarms
    match /users/{userId}/alarms/{alarmId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Grupos: crear si eres el owner; leer/actualizar si eres owner o estás en members
    match /groups/{groupId} {
      allow create: if request.auth != null
        && request.resource.data.owner == request.auth.uid;
      allow read, update: if request.auth != null
        && (resource.data.owner == request.auth.uid
            || request.auth.uid in resource.data.members);
      allow delete: if request.auth != null && resource.data.owner == request.auth.uid;
    }

    // Solicitudes pendientes: el usuario puede crearse su propio doc (solicitar unirse); el owner puede leer y borrar.
    match /groups/{groupId}/pending/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, delete: if request.auth != null
        && (request.auth.uid == userId
            || get(/databases/$(database)/documents/groups/$(groupId)).data.owner == request.auth.uid);
      allow update: if false;
    }

    // Alarmas de un grupo: leer/escribir solo si eres miembro aprobado (owner o en members)
    match /groups/{groupId}/alarms/{alarmId} {
      allow read, write: if request.auth != null
        && (get(/databases/$(database)/documents/groups/$(groupId)).data.owner == request.auth.uid
            || request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members);
    }
  }
}
